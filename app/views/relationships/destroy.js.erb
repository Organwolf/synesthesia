$("#follow").text("Follow");
$('#followers_table tr').each(function() {
	 if ($(this).attr("id") == "user_<%= current_user.id %>"){
	 	$(this).remove();
	 }
	 if ( $('#followers_table tr').length == 0 ){
	 	$('#followers_table').find('tbody:last').append("<%= escape_javascript( render('users/default_followers_row', user: @user) ) %>");
	 }
});
